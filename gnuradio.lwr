depends:
- boost
- fftw
- cppunit
- swig
- gsl
- uhd
- alsa
- cheetah
- wxpython
- numpy
- lxml
- pygtk
- pycairo
- cmake
- pyqt4
- pyqwt5
- apache-thrift
- liblog4cpp
- zeromq
category: common
satisfy:
  deb: gnuradio-dev
  pacman: gnuradio
  port: gnuradio
  portage: net-wireless/gnuradio
source: git+https://github.com/gnuradio/gnuradio.git
gitbranch: master
gitargs: --recursive
vars:
  config_opt: " -DENABLE_DOXYGEN=$builddocs "
inherit: cmake
configure_static: cmake .. -DCMAKE_BUILD_TYPE=$cmakebuildtype -DCMAKE_INSTALL_PREFIX=$prefix -DENABLE_STATIC_LIBS=True $config_opt
install: |
    make install
    make install
