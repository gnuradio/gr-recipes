category: baseline
configure: "cp qwtconfig.pri qwtconfig.pri.orig && \\\nsed 's/\\/usr\\/local\\/qwt-5.2.0/$reprefix/'\
  \ qwtconfig.pri  > qwtconfig.pri.tmp && \\\ncp qwtconfig.pri.tmp qwtconfig.pri &&\
  \ \\\nqmake \n"
depends:
- qt4
inherit: autoconf
make: "make    \n"
satisfy:
  deb: libqwt5-qt4 && libqwt-dev
  rpm: qwt-devel >= 5.2
  port: qwt52 >= 5.2
source: wget+http://prdownloads.sourceforge.net/qwt/qwt-5.2.0.tar.bz2
