category: baseline
configure: 'autoreconf -i

  ./configure --prefix=$prefix $config_opt

  '
depends:
- make
- git
- autoconf
- automake
gitbranch: master
inherit: autoconf
satisfy:
  deb: libsodium-dev
  rpm: libsodium-devel
  pacman: libsodium
  port: libsodium
source: git+https://github.com/jedisct1/libsodium.git
